# Description: perl interface to libev, a high performance full-featured event loop
# URL: https://metacpan.org/release/EV
# Packager: mimir knowledgeispower80-at-gmail-dot-com
# Depends on: 

name=perl-ev
version=4.22
release=1
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/EV-$version.tar.gz)

build() {
	cd EV-$version
        perl Makefile.PL INSTALLDIRS=vendor PREFIX=/usr
        make
        make DESTDIR=$PKG install
find $PKG -name '.packlist' -delete
find $PKG -name '*.pod' -delete
}
