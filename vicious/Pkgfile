# Description: Widgets for the Awesome window manager
# URL: http://git.sysphere.org/vicious/about/
# Packager: Roosevelt
# Depends on: 

name=vicious
version=2.1.3
release=1
source=(http://git.sysphere.org/vicious/snapshot/$name-$version.tar.xz)

build() {
	cd $name-$version
install -dm755 $PKG/usr/share/lua/5.2/$name/{widgets,contrib}
install -m644 *.lua $PKG/usr/share/lua/5.2/$name
install -m644 widgets/*.lua $PKG/usr/share/lua/5.2/$name/widgets
install -m644 contrib/*.lua $PKG/usr/share/lua/5.2/$name/contrib

rm -rf $PKG/usr/share/doc
}
